{% extends 'base.html.twig' %}

{% block content %}
    <style>
        .baniere-parents {
            background-image: url("{{ asset('assets/images/parents.jpg')}}");
            padding: 50px;
        }

        .contact {
            background-image: url("{{ asset('assets/images/ecole.jpg')}}");
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
            background-position: center;
            width: 100%;
        }
    </style>
    <main>
        <section class="baniere-parents d-flex justify-content-center">
            <h1 class="align-self-center">Parents délégués</h1>
        </section>
        <section class="parents container-fluid d-flex align-items-center justify-content-center my-3 h-auto" >
            <div class="row d-flex justify-content-center align-items-start">
                {% for parent in parents %}
                    {% for classTab in classTabs %}
                        {% if parent.classe == classTab %}
                                    <div class="col-xl-2 col-lg-3 col-md-3 col-sm-3 col-8 m-2 ">
                                        <div class="row d-flex justify-content-center">
                                                {% if parent.classe == classTab %}
                                                    <div class="col-6">
                                                        <div class="row"> 
                                                            <img class='img-fluid' height="560px" width="420px" src="/uploads/images/{{ parent.image }}"/>
                                                        </div>
                                                        {# <h3 class='text-center titre-classe fs-6'>{{parent.classe}}</h3>  #}
                                                        <div class="row d-flex justify-content-center fw-bolder text-center fs-6"> {{parent.classe}} <br>{{parent.fonction}}</div>
                                                        <div class="row d-flex justify-content-center text-center"> {{parent.firstname}}</br> {{parent.name | upper}}</div>
                                                    </div>
                                                {% else %}
                                                <div> </div>
                                                {% endif %}
                                        </div>
                        {% endif %}                 
                    {% endfor %}    
                                    </div>
                {% endfor %}    
            </div>
        </section>
         <section class="contact d-flex justify-content-center align-items-center text-white ">
            <div class="row d-flex justify-content-between align-items-center text-white w-100 px-5">
                <div class="col-lg-6 justify-content-center">
                <h3 class="text-center fs-md-5">Contactez nous</h3>
                </div>
                <div class="col-lg-6 d-flex justify-content-center">
                <a href="{{ path('contact') }}" >Contact</a>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
