{% extends 'base.html.twig' %}

{% block content %}
    <style>
        .baniere-parents {
            background-image: url("{{ asset('assets/images/parents.jpg')}}");
            padding: 50px;
        }

        .contact {
            background-image: url("{{ asset('assets/images/ecole.jpg')}}");
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
            background-position: center;
            width: 100%;
        }
    </style>
    <main>
        <section class="baniere-parents d-flex justify-content-center">
            <h1 class="align-self-center">Parents délégués</h1>
        </section>
        <section class="parents container-fluid d-flex align-items-center justify-content-center mt-5" style="height:100vh">
            <div class="row d-flex justify-content-center align-items-start">
                {% for parent in parents %}
                    {% for classTab in classTabs %}
                        {% if parent.classe == classTab %}
                                    <div class="col-xl-3 col-lg-4 col-md-4 col-sm-6 col-10 m-2 ">
                                        <div class="row">
                                            <h2 class='text-center'>{{parent.classe}}</h2> 
                                            {% for parent in parents %}
                                                {% if parent.classe == classTab %}
                                                        
                                                                <div class="col-6">
                                                                <div class="row"> 
                                                                    <img class='img-fluid' height="560px" width="420px" src="/uploads/images/{{ parent.image }}"/>
                                                                </div>
                                                                <div class="row d-flex justify-content-center fw-bolder"> {{parent.fonction}}</div>
                                                                <div class="row d-flex justify-content-center text-center"> {{parent.firstname}}</br> {{parent.name}}</div>
                                                                </div>

                                                {% else %}
                                                <div> </div>
                                                {% endif %}
                                            {% endfor %}
                        {% endif %}
                                        {# </div> #}
                                    </div>
                    {% endfor %}    
            </div>
                {% endfor %}    
            </div>
        </section>
        <section class="contact d-flex justify-content-sm-evenly align-items-center text-white">
            <h3>Contactez nous</h3>
            <a href="mailto:sandrinekencker@hotmail.com" >Contact</a>
        </section>
    </main>
{% endblock %}
